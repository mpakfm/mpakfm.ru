{% extends 'base.html.twig' %}

{% block body %}

    <!-- ******HEADER****** -->
    <header class="header">
        <div class="container clearfix">
            <img class="profile-image img-fluid float-left rounded-circle" src="build/images/persona-blue.png" alt="profile image" />
            <div class="profile-content float-left">
                <h1 class="name">Ошибка 404. Страница не найдена.</h1>
                <h2 class="desc">{{ error_text }}</h2>
            </div>
        </div>
    </header>

    <div class="container sections-wrapper">
        <div class="row">
            <div class="primary col-lg-8 col-12">
